{{!
    Page header.
}}
<header class="fixed-top navbar navbar-light bg-white navbar-expand moodle-has-zindex" aria-label="{{#str}}sitemenubar, admin{{/str}}" role="banner">
    <div class="d-flex align-items-center">
        <button id="navbar_responsive_button" class="navbar-toggler aabtn d-block d-md-none px-1 my-1 border-0" 
            data-toggler="drawers" 
            data-action="toggle" 
            data-target="theme_boost-drawers-primary"
            aria-expanded="false"
            aria-controls="theme_boost-drawers-primary">
            <span class="navbar-toggler-icon"></span>
            <span class="sr-only">{{#str}}sidepanel, core{{/str}}</span>
        </button>
        <a href="{{{ config.wwwroot }}}" class="navbar-brand aabtn {{# output.should_display_navbar_logo }}has-logo{{/ output.should_display_navbar_logo }}
            {{^ output.should_display_navbar_logo }}
                d-none d-sm-inline
            {{/ output.should_display_navbar_logo }}
                ">
        {{# output.should_display_navbar_logo }}
            <span class="logo d-sm-inline">
                    <img src="{{output.get_compact_logo_url}}" alt="Mentor - République française">
                </span>
        {{/ output.should_display_navbar_logo }}

        <div class="navbar-title-subtitle">
            <span class="main-title">mentor.gouv.fr{{{ output.site_type }}}</span>
            <span class="sub-title d-none d-sm-inline">La plateforme interministérielle de formation</span>
        </div>
    </a>
        <ul class="navbar-nav d-none d-md-flex ml-auto mentor-links">
            <!-- custom_menu -->
            {{{ output.custom_menu }}}
            <!-- page_heading_menu -->
            {{{ output.page_heading_menu }}}
        </ul>
        <div id="usernavigation" class="navbar-nav ml-auto">
            {{# output.search_box }}
                {{{ output.search_box }}}
                <div class="divider border-left h-75 align-self-center mx-1"></div>
            {{/output.search_box}}
            {{#langmenu}}
                {{> theme_boost/language_menu }}
                <div class="divider border-left h-75 align-self-center mx-1"></div>
            {{/langmenu}}
            {{{ output.navbar_plugin_output }}}
            <div class="d-flex align-items-stretch usermenu-container" data-region="usermenu">
                {{#usermenu}}
                    {{> core/user_menu }}
                {{/usermenu}}
            </div>
            {{{ output.edit_switch }}}
        </div>
    </div>
    {{#primarymoremenu}}
        <div class="primary-navigation">
            {{> core/moremenu}}
        </div>
    {{/primarymoremenu}}
    <!-- search_box -->
</header>

{{> theme_boost/primary-drawer-mobile }}
